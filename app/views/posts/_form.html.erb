<div class="margin50">


<%= form_for(@post) do |f| %>
  <% if @post.errors.present? %>
    <p>
      <%= @post.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div>
    <%= f.label(:title) %><br>
    <%= f.text_field(:title, class: "hundyP") %>
  </div>

  <div class="marginTop">
    <%= f.label(:body) %><br>
    <%= f.text_area(:body, rows: 6, class: "hundyP") %>
  </div>



  <%= f.submit(class: "btn btn-outline-primary marginTop") %>
<% end %>

</div>